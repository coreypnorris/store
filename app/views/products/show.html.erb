<h1><%= @product.name %></h1>

<h4>Price</h4>
<%= @product.price %><br>
<h4>Description</h4>
<%= @product.description %><br>


<%= link_to "Edit", edit_product_path, :class => "btn btn-primary" %>
<%= link_to "Remove", product_path(@product),
                      :confirm => "Sure you want to delete?",
                      :method => "delete",
                      :class => "btn btn-danger" %>

