<h1>Store Home</h1>

<%= link_to 'Add Product', new_product_path, :class => 'btn btn-primary' %>

<h4>Products List</h4>

<ul class="list-unstyled">
<% @products.each do |product| %>
  <li><%= link_to  "#{product.name}", product_path(product) %></li>
    <ul class="list-unstyled"><li>$<%= product.price %></li></ul><br>
<% end %>
</ul>

