<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :user_name %><br />
    <%= text_field_tag :user_name, params[:user_name] %>
  </div>
  <div class="form-group">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log In", :class => 'btn btn-primary' %>
<% end %>


